    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "ethers": "^6.15.0",
    "lucide-react": "^0.400.0",
    "next": "14.2.5",
    "pino-pretty": "^13.1.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "react-redux": "^9.1.2",
    "redux-persist": "^6.0.0",
    "viem": "2.x",
    "wagmi": "^2.18.1"
